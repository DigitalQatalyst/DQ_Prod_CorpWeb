# External tenant (default ciamlogin domain)
NEXT_PUBLIC_CIAM_SUBDOMAIN=dqproj                  # ‚Üê subdomain only
NEXT_PUBLIC_AAD_CLIENT_ID=f996140d-d79b-419d-a64c-f211d23a38ad

# Redirects (dev)
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000/dashboard
NEXT_PUBLIC_POST_LOGOUT_REDIRECT_URI=http://localhost:3000/

# Scopes (OIDC defaults are added automatically; harmless to include)
NEXT_PUBLIC_API_SCOPES="openid profile offline_access"

# Optional: Custom domain for Entra ID external identities (uncomment and set if used)
# NEXT_PUBLIC_CIAM_CUSTOM_DOMAIN=login.example.com

# Optional: Tenant ID or domain for Azure AD (uncomment and set if used)
# NEXT_PUBLIC_TENANT_ID=your-tenant-id-or-domain-here

# Vite exposes only VITE_* variables to the client. Duplicate values here.
VITE_AZURE_SUBDOMAIN=dqproj
VITE_AZURE_CLIENT_ID=f996140d-d79b-419d-a64c-f211d23a38ad
VITE_AZURE_REDIRECT_URI=http://localhost:3000/dashboard
VITE_AZURE_POST_LOGOUT_REDIRECT_URI=http://localhost:3000/
VITE_AZURE_SCOPES="openid profile offline_access"

# Optional: Use a dedicated sign-up flow when clicking Sign Up
# For Entra External ID/B2C, create a Sign-up user flow (e.g. B2C_1_SignUp)
# and set one of the following:
# NEXT_PUBLIC_B2C_POLICY_SIGNUP=B2C_1_SignUp
# VITE_B2C_POLICY_SIGNUP=B2C_1_SignUp

# Optional: Enable Graph fallback to resolve real email (avoids UPN)
# VITE_MSAL_ENABLE_GRAPH_FALLBACK=false
VITE_IDENTITY_HOST=dqproj.ciamlogin.com
VITE_MSAL_ENABLE_GRAPH_FALLBACK=true
